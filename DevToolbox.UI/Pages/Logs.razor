@page "/logs"

<div class="container my-4">
    <h1 class="mb-3">Log Viewer</h1>
    <p class="lead mb-4">View and analyze application logs.</p>
    
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <input type="text" class="form-control" @bind="SearchText" @bind:event="oninput" placeholder="Search logs..." />
                </div>
                
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" @onclick="ApplyFilters">Apply Filters</button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body text-center py-5">
            <p class="text-muted mb-0">No logs to display. Adjust your filters or check back later.</p>
        </div>
    </div>
</div>

